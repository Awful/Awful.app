<article id="{{ postID }}" class="post {{# beenSeen }}seen{{/ }} {{# authorIsOP }}role-op{{/ }} {{# author.moderator }}role-mod{{/ }} {{# author.administrator }}role-admin{{/ }} {{# author.idiotKing }}role-ik{{/ }} {{^ author.avatarURL }}no-avatar{{/ }}">
  <header>
    {{# author.avatarURL }}<img class="avatar" src="{{ . }}" alt="">{{/}}
    <h1 class="username">{{ author.username }}<div id="bracket"></div></h1>
    <time class="regdate">Joined {{ regDateFormat(author.regdate) }}</time>
  </header>
  
  <section class="postbody">
    {{{ innerHTML }}}
    {{# attachmentID }}
      <p class="attachment">
        <img src="http://forums.somethingawful.com/attachment.php?postid={{ postID }}" alt="">
      </p>
    {{/ }}
    {{# editDate }}
      <p class="editedby">
        <span>
          {{ editorUsername }} fucked around with this message on {{ editDateFormat(.) }}
        </span>
      </p>
    {{/ }}
  </section>
	
	<footer>
		<time class="postdate">{{ postDateFormat(postDate) }}</time>
    <button class="action-button" title="Post actions">•••</button>
	</footer>

</article>
